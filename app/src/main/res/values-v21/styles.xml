<resources>

    <style name="AppBaseTheme" parent="Theme.Scrum_chatter">
        <!-- API 21 theme customizations can go here. -->
        <!--
          Fix for Issue #40: bug where the overflow menu item text was dark on Lollipop:
          We'll specify the holo dark text color for the "large popup menu"
          text appearance.
          http://stackoverflow.com/questions/18015010/action-bar-menu-item-text-color
        -->
        <item name="android:textAppearanceLargePopupMenu">@style/MenuItemText</item>
    </style>

    <style name="MenuItemText" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/abs__primary_text_holo_dark</item>
    </style>

</resources>
